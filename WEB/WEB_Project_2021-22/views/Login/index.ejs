
<section>
    <div class="about">
        <div class="container">
            <form class="signup-form" method="post">

                <!-- form header -->
                <div class="form-header">
                    <h1>Hello Again</h1>
                </div>
            
                <!-- form body -->
                <div class="form-body">
                    
                    <% if(fromReg){ %>
                        <div class="form-alert">
                            <div class="alert" role="alert" id ='num0'>
                                <div class="alert-message">Your account has been created. Please use your credentials to login!</div> 
                                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            </div>
                        </div>
                    <% } %> 

                    <% if (typeof alert != 'undefined'){ %>
                        <div class="form-alert">
                            <% alert.forEach(function(error, i) { %>

                                <div class="alert" role="alert" id ='num<%=i%>'>
                                    <div class="alert-message"><%- error.msg %></div> 
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>

                            <% }); %>
                        </div>
                    <% } %>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="email" class="label-title">Email*</label>
                        <input type="email" id="email" name="email" class="form-input" placeholder="enter your email" required="required">
                      </div>
        
                      <!-- Passwrod and confirm password -->
                      <div class="horizontal-group">
                    
                        <div class="form-group">
                          <label for="password" class="label-title">Password *</label>
                          <input type="password" id="password" name="password" class="form-input" placeholder="enter your password" required="required">
                        </div>
                    
                    </div>
        
                </div>
                
                <!-- form footer -->
                <div class="form-footer">
                    <span>* required</span>
                    <button type="submit" class="btn">Login</button>
                </div>
            
            </form>
        </div>
    </div>
</section>