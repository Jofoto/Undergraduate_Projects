
<section>
    <div class="about">
        <div class="container">
            <form class="signup-form" action="" method="post">

                <!-- form header -->
                <div class="form-header">
                    <h1>Become a Member</h1>
                </div>

                
                    <% if (typeof alert != 'undefined'){ %>
                        <div class="form-alert">
                            <% alert.forEach(function(error, i) { %>

                                <div class="alert" role="alert" id ='num<%=i%>'>
                                    <div class="alert-message"><%- error.msg %></div> 
                                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                                </div>

                            <% }); %>
                        </div>
                    <% } %> 
            
                <!-- form body -->
                <div class="form-body">
        
                    <!-- Firstname and Lastname -->
                    <div class="horizontal-group">
                        <div class="form-group left">
                            <label for="firstname" class="label-title">Username *</label>
                            <input type="text" id="username" name = "username" class="form-input" placeholder="enter your username" required="required" />
                        </div>
                        <div class="form-group right">
                            <label for="lastname" class="label-title">Confirm Username *</label>
                            <input type="text" id="confirm-username" name = "username_confirm" class="form-input" placeholder="confirm your username" required="required" />
                        </div>
                    </div>
                    <div class="form-group"><div class="exception" id = "username_tx" name = "username_tx"></div></div>
        
                    <!-- Email -->
                    <div class="form-group">
                        <label for="email" class="label-title">Email*</label>
                        <input type="email" id="email" name ="email" class="form-input" placeholder="enter your email" required="required">
                    </div>
                    <div class="horizontal-group"><div id = "email_tx" class="exception" name = "username_tx"></div></div>
        
                    <!-- Passworod and confirm password -->
                    <div class="horizontal-group">
                
                      <div class="form-group left">
                        <label for="password" class="label-title">Password *</label>
                        <input type="password" id="password" name = "password" class="form-input" placeholder="enter your password" required="required">
                      </div>
                
                      <div class="form-group right">
                        <label for="confirm-password" class="label-title">Confirm Password *</label>
                        <input type="password" class="form-input" id="confirm-password" name = "password_confirm" placeholder="enter your password again" required="required">
                      </div>
                      <div class="horizontal-group"><div id = "password-tx" name = "password_tx" class="exception"></div></div>
                      
                    </div>
        
                </div>
                
                <!-- form footer -->
                <div class="form-footer">
                    <span>* required</span>
                    <button type="submit" class="btn">Create</button>
                </div>
                
                
                
            </form>
        </div>
    </div>
</section>